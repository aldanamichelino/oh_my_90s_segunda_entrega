<header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light text-light py-4" style="background: #f24c72;">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarExample01"
          aria-controls="navbarExample01"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse justify-content-around" id="navbarExample01">
          <div>
             <h4>¡Bienvenidx a Sweet 90's, <%= user.name %>!</h4>   
          </div>
          <ul class="navbar-nav mb-2 mb-lg-0">
            <li class="nav-item active">
              <a class="nav-link" aria-current="page" href="/api/productos">Todos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/api/productos/categoria/salados">Salados</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/api/productos/categoria/dulces">Dulces</a>
            </li>
          </ul>
          <div class="d-flex justify-content-around align-items-center">
              <a class="mx-2" style="border: none; background: none; padding: 0" data-mdb-toggle="modal" data-mdb-target="#userInfo"><i class="fas fa-user-alt text-light"></i></a>
              <a class="mx-4" style="border: none; background: none; padding: 0" href="/api/carrito"><i class="fas fa-shopping-cart text-light"></i></a>
              <a class="mx-2" style="border: none; background: none; padding: 0" href="/api/mispedidos"><i class="fa-solid fa-arrow-down-wide-short text-light"></i></a>
              <a class="btn btn-outline-dark" href="/logout">Cerrar sesión</a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Navbar -->
  </header>

  <!-- User Info Modal -->
  <div class="modal fade" id="userInfo" data-mdb-backdrop="static" data-mdb-keyboard="false" tabindex="-1" aria-labelledby="userInfoLabel" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="userInfoLabel">Tu información</h5>
              <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Volver"></button>
          </div>
          <div class="modal-body">
              <h3><%= user.name %></h3>
              <div class="d-flex">
              <img class="w-25 m-4" src="<%= `/uploads/${user.avatar.filename}` %>" alt="Avatar de usuario">
              <div class="mt-4">
                  <p>Email: <%= user.email %></p>
                  <p>Whatsapp: <%= user.phone %></p>
                  <p>Edad: <%= user.age %></p>
                  <p>Dirección de envío: <%= user.address %></p>
              </div>
              </div>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Volver</button>
          </div>
        </div>
    </div>
  </div>